<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingTop="70dp">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SemaineSuivante"
        android:text="Semaine suivante"
        android:onClick="SemaineSuiv"
        android:layout_marginRight="@dimen/dim2"
        style="@style/btnStyleShakespeare"

        android:layout_alignParentRight="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim2"
        android:id="@+id/SemainePrecedente"
        android:text="Semaine prÃ©cedente"

        style="@style/btnStyleShakespeare"
        android:layout_alignParentLeft="true"/>
    <com.alamkanak.weekview.WeekView
        android:layout_marginTop="40dp"
    android:id="@+id/weekView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:eventTextColor="@android:color/white"
    app:textSize="12sp"
    app:hourHeight="60dp"
    app:headerColumnPadding="8dp"
    app:headerColumnTextColor="#8f000000"
    app:headerRowPadding="12dp"
    app:columnGap="8dp"
    app:noOfVisibleDays="7"
    app:headerRowBackgroundColor="#ffefefef"
    app:dayBackgroundColor="#05000000"
    app:todayBackgroundColor="#05000000"
    app:headerColumnBackground="#ffffffff"/>
</RelativeLayout>