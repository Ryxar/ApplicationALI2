        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rd_1"
        android:text="Paris 4 Saint Merri"
        />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="60dp">
        
    </ListView>

    <TimePicker
